{
  "version": "0.1.0",
  "license": "Apache-2.0",
  "name": "@blockstrait/bsvalias-client",
  "author": "Pol Moreno Yeste",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "start": "npm run build && echo ... to-do",
    "prebuild": "npm run clean",
    "build": "lerna run build",
    "clean": "npm-run-all clean:*",
    "clean:cache": "rimraf .build-cache",
    "clean:packages": "lerna run clean",
    "test": "lerna run test",
    "test:watch": "lerna run --parallel test:watch",
    "coverage": "lerna run coverage",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "pretty:check": "prettier --list-different \"**/*.{js,json,md,ts}\"",
    "pretty:fix": "prettier --write \"**/*.{js,json,md,ts}\"",
    "link-packages": "lerna link",
    "precommit": "lint-staged",
    "fix": "npm run lint:fix && npm run pretty:fix",
    "docs": "lerna run docs"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@types/source-map-support": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-mock": "^27.4.2",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4"
  }
}

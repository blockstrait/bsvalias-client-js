{
  "version": "0.1.0",
  "license": "Apache-2.0",
  "name": "@blockstrait/bsvalias-client",
  "author": "Pol Moreno Yeste",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "start": "npm run build && echo ... to-do",
    "prebuild": "npm run clean",
    "build": "lerna run build",
    "clean": "npm-run-all clean:*",
    "clean:cache": "rimraf .build-cache",
    "clean:packages": "lerna run clean",
    "test": "lerna run test",
    "test:watch": "lerna run --parallel test:watch",
    "coverage": "lerna run coverage",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "pretty:check": "prettier --list-different \"**/*.{js,json,md,ts}\"",
    "pretty:fix": "prettier --write \"**/*.{js,json,md,ts}\"",
    "link-packages": "lerna link",
    "precommit": "lint-staged",
    "fix": "npm run lint:fix && npm run pretty:fix",
    "docs": "lerna run docs"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@types/source-map-support": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-mock": "^28.1.3",
    "lerna": "^5.2.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "typedoc": "^0.23.8",
    "typescript": "^4.7.4"
  }
}
